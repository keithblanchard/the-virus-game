{
  "name": "the-virus",
  "version": "0.1.0",
  "description": "Example project showing how to use Sass middleware",
  "main": "server.js",
  "scripts": {
    "start:dev": "node server.js",
    "start:prod": "node server-build.js",
    "sass": "node ./node_modules/sass/sass.js ./scss/index.scss ./public/index.css",
    "rollup": "./node_modules/rollup/dist/bin/rollup ./public/src/index.js --file ./pre-dist/index.js --format iife",
    "uglifyjs": "./node_modules/uglify-es/bin/uglifyjs --output dist/index.js --compress --mangle -- ./pre-dist/index.js",
    "copyCSS": "cp ./public/index.css ./dist/index.css",
    "copyIndexHTML": "cp ./public/index-prod.html ./dist/index.html",
    "copyAudio": "cp -R ./public/audio ./dist/audio",
    "copyGraphics": "cp -R public/svg* ./dist/",
    "copyTemplates": "cp -R ./public/templates ./dist/templates",
    "copyAll": "npm run copyCSS && npm run copyAudio && npm run copyGraphics && npm run copyIndexHTML && npm run copyTemplates",
    "build": "npm-run-all sass rollup uglifyjs copyAll",
    "build:SVG:viruses": "svg/buildViruses.sh",
    "updatePremissions": "chmod u+x svg/buildViruses.sh"
  },
  "dependencies": {
    "express": "^4.15.0",
    "rollup": "^2.3.1",
    "sass": "^1.17.3",
    "uglify-es": "^3.3.9"
  },
  "keywords": [
    "node",
    "express",
    "sass"
  ],
  "license": "",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^3.8.3"
  }
}
